		script(src='/javascripts/bootstrap.js')
		script.
			$(document).ready(function(){
			$(document).on('click', '#master', function(){
			if ($('#master').text() == "Enable Master") {
				$('#master').text("Disable Master");
				$.get('/master', { mode:'disable' });
			}
			else {
				$('#master').text("Enable Master");
				$.get('/master', { mode:'enable' });
			}
			});
			});
